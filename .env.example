# Environment Configuration for KOMIHUB Bot
# Copy this file to .env and fill in your values

# =============================================================================
# BOT CONFIGURATION
# =============================================================================
BOT_TOKEN=your_bot_token_here
BOT_NAME=KOMIHUB BOT
ADMIN_NAME=Your Admin Name
ADMIN_ID=1234567890

# =============================================================================
# HOSTING CONFIGURATION
# =============================================================================
# HOSTING_MODE: polling, webhook, or auto
# - polling: For VPS, Termux, local development
# - webhook: For Render, Heroku, Railway, etc.
# - auto: Auto-detect based on environment
HOSTING_MODE=auto

# Web Service Configuration (only needed for webhook mode)
PORT=8000
HOST=0.0.0.0

# Webhook URL (set this for webhook mode hosting)
WEBHOOK_URL=https://your-domain.com/webhook

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_TO_FILE=true
LOG_TO_CONSOLE=true
NO_COLOR=false

# =============================================================================
# API KEYS
# =============================================================================
YOUTUBE_API_KEY=your_youtube_api_key_here

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=sqlite:///./data/komihub.db

# =============================================================================
# SECURITY
# =============================================================================
SECRET_KEY=your_secret_key_here

# =============================================================================
# PERFORMANCE
# =============================================================================
MAX_WORKERS=4
TIMEOUT=30

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW=60

# =============================================================================
# FEATURES
# =============================================================================
AUTO_UPDATE=false
UPDATE_CHECK_INTERVAL=3600
MAINTENANCE_MODE=false
USER_TRACKING=true
BROADCAST_SYSTEM=true
HOT_RELOAD=true